{% form_theme form _self %}

{# form_errors.html.twig #}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% if compound %}
                    {% for error in errors %}
                        <div class="alert alert-warning">{{ error.message }}</div>
                    {% endfor %}
            {% else %}
                {% for error in errors %}
                    <div class="alert alert-warning">{{ error.message }}</div>
                {% endfor %}
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}