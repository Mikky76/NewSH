{# On utilise une macro Twig pour afficher :
* son nom et un lien vers son profil#}

{# import "SdzUserBundle::userHelpers.html.twig" as userHelpers #}

<div id="comment{{ comment.id }}" itemscope itemtype="http://schema.org/Comment">
    {% if is_granted('ROLE_ADMIN') %}
        <div class="pull-right">
            <a href="{{ path('sh_news_remove_comment', {'id': comment.id}) }}" class="btn btn-danger">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </div>
    {% endif %}
    <em>
        Le <time datetime="{{ comment.date|date('c') }}" itemprop="datePublished">{{ comment.date|date('d/m/Y à  H\\hi') }}</time>,
        {#<span itemprop="author">{{ userHelpers.link(comment.user, comment.auteur) }}</span> a Ã©crit :#}
        <span itemprop="author">{{comment.author}}</span> a écrit :
    </em>
    <br/>
    {{ comment.content }}
</div>