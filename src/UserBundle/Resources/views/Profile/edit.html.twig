{% extends "UserBundle::layout.html.twig" %}

{% block fos_user_content %}

    {% trans_default_domain 'FOSUserBundle' %}

    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form-horizontal col-md-6 col-md-offset-3' } }) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <h4>Edition de votre profil</h4>
    <div class="form-group">
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Pseudo'}}) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe actuel'}}) }}
        {{ form_errors(form.current_password) }}
    </div>
    {{ form_widget(form) }}

    <div>
        <input class="btn btn-md btn-primary" type="submit" value="Enregistrer" />
    </div>
    {{ form_end(form) }}

{% endblock fos_user_content %}
